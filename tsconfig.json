{
    "compilerOptions": {
      "moduleResolution": "node",
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "baseUrl": ".",
      "paths": {
        "@/*": [
          "src/*"
        ]
      },
    },
    "include": [
      "src/**/**.ts",
      "tests/**/*.ts"
    ],
    "exclude": [
      "node_modules"
    ]
  }